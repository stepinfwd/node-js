<% if (restaurants.length == 0) { %>
    <p>Currently no restaurants available !</p>
    <% } else { %>
    <p>Total <%= numberOfRestaurants %> restaurants available !</p>
    <h1>Recommended restaurants</h1>
    <p>Find your next favorite restaurants with help of our other users!</p>
    <% for (const restaurant of restaurants) { %>
    <ul id="restaurants-list">
      <li class="restaurant-item">
        <article>
          <h2><%= restaurant.name %> </h2>
          <div class="restaurant-meta">
            <p><%= restaurant.cuisine %></p>
            <p><%= restaurant.address %></p>
          </div>
          <p>
          <%= restaurant.description %>
          </p>
          <div class="restaurant-actions">
          <a href="/restaurants/<%= restaurant.id %>">View restaurant</a>
          </div>
        </article>
      </li>
</ul>
<% }
} %>


